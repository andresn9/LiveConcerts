<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiveConcerts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blackPrimary</item>
        <item name="colorPrimaryVariant">@color/blackPrimary</item>
        <item name="colorOnPrimary">@color/yellowPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blackPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LiveConcerts.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LiveConcerts.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LiveConcerts.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>