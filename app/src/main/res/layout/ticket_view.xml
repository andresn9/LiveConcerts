<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id = "@+id/event_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:id="@+id/event_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellowPrimaryLight"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@color/blackPrimaryDark"
            android:showDividers="middle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ticket_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Title"

                android:textAlignment="center"
                android:textColor="@color/blackPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ticket_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Fecha"
                android:textAlignment="center"
                android:textColor="@color/blackPrimaryDark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ticket_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="40"
                android:textAlignment="center"
                android:textColor="@color/blackPrimaryDark"
                android:textSize="20sp" />

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>